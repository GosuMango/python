    elif action == "Restart":
        if os.path.exists(STATE_FILE):
            os.remove(STATE_FILE)
        load_state()  # Reload the default state
        message = "Game has been reset."

<input type="submit" name="action" value="Restart">

if money < -1500000:
    print(f"""
    <html>
    <head><title>You're Done</title></head>
    <body>
        <h1>Game Over</h1>
        <p>You are more than $1.5 million in debt. No more gambling for you.</p>
    </body>
    </html>
    """)
    exit()
